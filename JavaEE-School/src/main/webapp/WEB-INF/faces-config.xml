<?xml version="1.0" encoding="UTF-8"?>
<faces-config
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
    version="2.2">
	<managed-bean>
		<managed-bean-name>schoolBeanController</managed-bean-name>
		<managed-bean-class>ch.hevs.managedbeans.SchoolBeanController</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<navigation-rule>
		<display-name>welcomeSchool.xhtml</display-name>
		<from-view-id>/welcomeSchool.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>addMarkToStudentForm</from-outcome>
			<to-view-id>/addMarkToStudentForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>welcomeSchool.xhtml</display-name>
		<from-view-id>/welcomeSchool.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>addStudentToSubjectForm</from-outcome>
			<to-view-id>/addStudentToSubjectForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>welcomeSchool.xhtml</display-name>
		<from-view-id>/welcomeSchool.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>applyForm</from-outcome>
			<to-view-id>/applyForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>welcomeSchool.xhtml</display-name>
		<from-view-id>/welcomeSchool.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>createSubjectForm</from-outcome>
			<to-view-id>/createSubject.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>welcomeSchool.xhtml</display-name>
		<from-view-id>/welcomeSchool.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>getStudentMarksForm</from-outcome>
			<to-view-id>/getStudentMarksForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>welcomeSchool.xhtml</display-name>
		<from-view-id>/welcomeSchool.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>modifySubjectForm</from-outcome>
			<to-view-id>/modifySubjetcForm.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>addMarkToStudentForm.xhtml</display-name>
		<from-view-id>/addMarkToStudentForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{schoolBeanController.performGiveGrade}</from-outcome>
			<to-view-id>/showResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>addStudentToSubjectForm.xhtml</display-name>
		<from-view-id>/addStudentToSubjectForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{schoolBeanController.performAddStudentToCourse}</from-outcome>
			<to-view-id>/showResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>applyForm.xhtml</display-name>
		<from-view-id>/applyForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{schoolBeanController.performApplyCourse}</from-outcome>
			<to-view-id>/showResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>createSubject.xhtml</display-name>
		<from-view-id>/createSubject.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{schoolBeanController.performCreateSubject}</from-outcome>
			<to-view-id>/showResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>modifySubjetcForm.xhtml</display-name>
		<from-view-id>/modifySubjetcForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{schoolBeanController.performModifySubject}</from-outcome>
			<to-view-id>/showResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>welcomeSchool.xhtml</display-name>
		<from-view-id>/welcomeSchool.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>addStudent</from-outcome>
			<to-view-id>/addStudent.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>addStudent.xhtml</display-name>
		<from-view-id>/addStudent.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{schoolBeanController.performCreateStudent}</from-outcome>
			<to-view-id>/showResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>welcomeSchool.xhtml</display-name>
		<from-view-id>/welcomeSchool.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>addTeacher</from-outcome>
			<to-view-id>/addTeacher.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>addTeacher.xhtml</display-name>
		<from-view-id>/addTeacher.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{schoolBeanController.performCreateTeacher}</from-outcome>
			<to-view-id>/showResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>welcomeSchool.xhtml</display-name>
		<from-view-id>/welcomeSchool.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>subjectListResult</from-outcome>
			<to-view-id>/subjectListResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>getStudentMarksForm.xhtml</display-name>
		<from-view-id>/getStudentMarksForm.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>#{schoolBeanController.performGetStudentMarksOnSubject}</from-outcome>
			<to-view-id>/marksResult.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>
